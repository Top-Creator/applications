{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": ".tsbuild",
    "moduleResolution": "node",
    "allowJs": true,
    "downlevelIteration": true,
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@features/*": ["features/*"],
      "@preloads/*": ["preloads/*"],
      "@requests/*": ["requests/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js"]
}
